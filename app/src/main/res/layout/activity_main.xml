<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="a4336.a0.practise.james.roundtimer.MainActivity"
    >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:text="Number of Rounds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/N_R_Title"
            android:layout_marginRight="@dimen/default_gap"
            android:layout_marginLeft="@dimen/default_gap"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="16sp" />


        <TextView
            android:text="Length of Rounds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/L_R_Title"
            android:layout_marginRight="@dimen/default_gap"
            android:layout_marginLeft="@dimen/default_gap"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="16sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/tableRow2" >

        <TextView
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/Set_Num_Rounds_Text"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="40sp" />

        <TextView
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/Set_Length_Rounds_Text"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="40sp" />
    </TableRow>

</RelativeLayout>
