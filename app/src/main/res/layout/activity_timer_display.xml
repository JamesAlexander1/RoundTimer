<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_timer_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="a4336.a0.practise.james.roundtimer.View.TimerDisplayActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/table_row_1">

        <TextView
            android:text="@string/round_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/round_number_view"
            android:textSize="35sp"
            android:textAlignment="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:id="@+id/table_row_2">

        <TextView
            android:text="@string/_0_00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Round_Timer_View"
            android:textSize="120sp"
            android:textAlignment="center"
            android:layout_marginTop="74dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/table_row_3"
        android:layout_height="80dp">

        <Button
            android:text="@string/pause"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/pause_button"
            android:layout_weight="1" />

        <Button
            android:text="@string/exit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/Quit_Button"
            android:layout_weight="1" />
    </TableRow>

</RelativeLayout>
